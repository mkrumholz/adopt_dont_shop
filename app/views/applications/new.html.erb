<h1>New Application</h1>

<%= form_with model: @application, url: applications_path, method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :street_address %>
  <%= f.text_field :street_address  %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.select :state, options_for_select(us_states) %>

  <%= f.label :zip_code %>
  <%= f.text_field :zip_code %>

  <%= f.label :description, 'Why would you make a good home for a new pet?' %>
  <%= f.text_area :description %>

  <%= f.submit 'Save' %>
<% end %>
