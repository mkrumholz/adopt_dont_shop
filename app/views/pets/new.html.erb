<h1>New Pet</h1>

<div class="container-sm mx-5">
  <%= form_with url: "/shelters/#{@shelter.id}/pets", method: :post, local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :breed %>
    <%= f.text_field :breed %>

    <%= f.label :age %>
    <%= f.number_field :age %>

    <%= f.label :adoptable %>
    <%= f.check_box :adoptable, value: true %>

    <%= f.submit %>
  <% end %>
</div>
